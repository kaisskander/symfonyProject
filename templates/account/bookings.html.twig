{% extends 'base.html.twig' %}

{% block title %}Vos reservation passées et a venir {% endblock %}

{% block body %}

    <div class="container">
        <h1>Mes reservations</h1>
        <div class="alert alert-info mt-5">
            <p>Retrouvez ci-dessous touts vos reservation passes et a venir</p>
        </div>
        {% for booking in app.user.bookings %}
            {% set ad = booking.ad %}
            <div class="row mt-5 ">
                <div class="col-4">
                    <img src="{{ ad.coverImage }}" alt="photo de limage{{ ad.title }}" class="img-fluid">
                    <div class="mt-3">
                        {% set comment = ad.commentFromAuthor(app.user) %}

                            {% if comment is not null %}
                                <strong>Note:</strong>{% include 'partials/rating.html.twig' with {'rating' : comment.rating}%}
                            {% else %}
                                <p>Vous n'avez pas encore donné de note.</p>
                                 <a href="{{ path('booking_show',{'id':booking.id}) }}#comment" class="btn btn-link">Je donne mon avis!!!</a>

                            {% endif %}
                    </div>
                </div>
                <div class="col-8">
                    <h4>{{booking.ad.title }}</h4>
                    <p>
                        Reservation <strong>n{{ booking.id }}</strong><br>
                        Du {{ booking.startDate| date('d/m/Y') }} au {{ booking.endDate | date('d/m/Y') }} ({{ booking.amount }} &euro;)
                    </p>
                    <a href="{{ path('booking_show',{'id':booking.id}) }}" class="btn btn-info">PLUS D'INFO</a>
                </div>

            </div>
        {% endfor %}
    </div>

{% endblock %}